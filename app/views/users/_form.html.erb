<%= form_with(model: user, local: true, class: 'm-2 p-4') do |form| %>
  <div class="form-group ml-3">
    <%= render 'layouts/error', cause: user %>
  </div>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, placeholder: '名前を入力', class: 'w-25' %>
  </div>
  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.text_field :email, placeholder: 'メールアドレスを入力', class: 'w-25' %>
  </div>
  <div class="form-group">
    <%= form.label :password %><br>
    <%= form.text_field :password, placeholder: 'パスワードを入力', class: 'w-25' %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, class: 'w-25' %>
  </div>
  <div class="btn-container">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
