<% cla = current_user.class.to_s %>
<% val = {"User" => ['user_favorites', :user_id], "Store" => ['passive_follows', :follower_id]} %>
<% if store.send(val[cla][0]).find_by(val[cla][1] => current_user.id) %>
  <%= link_to 'お気に入り解除', store_favorite_path(store.id), method: :delete, remote: true %>
<% else %>
  <%= link_to 'お気に入り登録', store_favorites_path(id: store.id), method: :post, remote: true %>
<% end %>
