<%= form_with(model: @promotion, local: true, url: store_promotions_path, class: 'w-75 p-4 mx-auto') do |form| %>
  <div class="form-group ml-3">
    <%= render 'layouts/error', cause: @promotion %>
  </div>
  <div class="form-group ml-3">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'w-75' %>
  </div>
  <div class="form-group ml-3">
    <%= form.label :content %><br>
    <%= form.text_area :content, class: 'w-75', style: 'height: 180px;' %>
  </div>
  <div class="btn-container">
    <%= form.submit 'post', class: 'btn btn-primary' %>
  </div>
<% end %>
